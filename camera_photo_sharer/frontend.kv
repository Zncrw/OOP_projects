<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            opacity: 0
            resolution: (640, 480)
            play: False
            size_hint_y: 0.8
        Button:
            id: camera_button
            on_press: root.start() if self.ids.camera.play == False else root.stop()
            size_hint_y: 0.1
            background_normal: 'normal.png'
            background_down: 'down.png'
        Button:
            text: 'Capture screenshot'
            size_hint_y: 0.1
            background_normal: 'normal.png'
            background_down: 'down.png'
<ImageScreen>:
    padding: 10
    spacing: 10
    GridLayout:
        cols: 1
        Image:
            id: img
            source: root.capture
            size_hint_y: 0.7
        Button:
            text: 'Create shareable link'
            on_press: 'create_link'
            size_hint_y: 0.1
            background_normal: 'normal.png'
            background_down: 'down.png'
        Label:
            text: link
            size_hint_y: 0.1
        GridLayout:
            size_hint_y: 0.1
            cols: 2
            Button:
                text: 'Copy Link'
                on_press: root.copy_link()
                background_normal: 'normal.png'
                background_down: 'down.png'
            Button:
                text: 'Open Link'
                on_press: root.open_link()
                background_normal: 'normal.png'
                background_down: 'down.png'

<RootWidget>
    canvas.before:
        Color:
            rgba: (0.3, 0.2, 0,1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'
