<CameraScreen>:
    GridLayout:
        cols: 1
        Camera:
            resolution: (640, 480)
            play: False
        Button:
            id: camera_button
            on_press: root.start() if self.ids.camera.play == False else root.stop()
        Button:
            text: 'Capture screenshot'
<ImageScreen>:
    GridLayout:
        cols: 1
        Image:
            id: img
            source: root.capture
        Button:
            text: 'Create shareable link'
        Label:
            text: ''
        GridLayout:
            cols: 2
            Button:
                text: 'Copy Link'
            Button:
                text: 'Open Link'

<RootWidget>
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'
